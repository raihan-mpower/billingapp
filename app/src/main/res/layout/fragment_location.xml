<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="billingapp.psionicinteractivelimited.com.billingapp.fragments.LocationFragment">

    <!-- TODO: Update blank fragment layout -->

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.v7.widget.AppCompatAutoCompleteTextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/city"
            android:layout_marginTop="15dp"
            android:layout_marginRight="30dp"
            android:layout_marginLeft="10dp"
            android:background="@drawable/textboxback"
            android:textColor="#ffffff"
            android:hint="City"
            android:textColorHint="#ffffff" />

        <android.support.v7.widget.AppCompatAutoCompleteTextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/sector_block"
            android:layout_marginTop="15dp"
            android:layout_marginRight="30dp"
            android:layout_marginLeft="10dp"
            android:background="@drawable/textboxback"
            android:textColor="#ffffff"
            android:textColorHint="#ffffff"
            android:hint="Sector or Block" />

        <android.support.v7.widget.AppCompatAutoCompleteTextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/road_no"
            android:layout_marginTop="15dp"
            android:layout_marginRight="30dp"
            android:layout_marginLeft="10dp"
            android:background="@drawable/textboxback"
            android:textColor="#ffffff"
            android:hint="Road Number"
            android:textColorHint="#ffffff" />

        <android.support.v7.widget.AppCompatAutoCompleteTextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/house_number"
            android:layout_marginTop="15dp"
            android:layout_marginRight="30dp"
            android:layout_marginLeft="10dp"
            android:background="@drawable/textboxback"
            android:textColor="#ffffff"
            android:textColorHint="#ffffff"
            android:hint="House Number" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp">

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:id="@+id/imageView2"
                android:src="@drawable/customer_icon"
                android:layout_marginLeft="10dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAllCaps="true"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Customer ID"
                android:id="@+id/textView3"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="30dp"
                android:textColor="#ffffff" />

        </LinearLayout>

        <EditText
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/customer_id"
            android:layout_marginTop="15dp"
            android:layout_marginRight="30dp"
            android:layout_marginLeft="10dp"
            android:background="@drawable/textboxback"
            android:hint="Customer ID"
            android:textColorHint="#fff"
            android:textColor="#ffffff" />

        <EditText
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/telephone_no"
            android:layout_marginTop="15dp"
            android:layout_marginRight="30dp"
            android:layout_marginLeft="10dp"
            android:background="@drawable/textboxback"
            android:hint="Telephone Number"
            android:textColorHint="#fff"
            android:textColor="#ffffff" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Bill Payment"
            android:id="@+id/bill_payment"
            android:layout_gravity="center_horizontal"
            android:textColor="#ffffff"
            android:background="@drawable/buttonunpressedback"
            android:layout_marginTop="15dp" />
    </LinearLayout>

</FrameLayout>
