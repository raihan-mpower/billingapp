<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="billingapp.psionicinteractivelimited.com.billingapp.fragments.LocationFragment">

    <!-- TODO: Update blank fragment layout -->



        <RelativeLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingTop="10dp"
            >

            <LinearLayout
                android:id="@+id/customer_id_text_layout"


                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true">


                <TextView
                    android:id="@+id/customer_id_text"

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAllCaps="true"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="Customer ID"
                    android:layout_marginLeft="10dp"
                    android:textColor="#ffffff" />

                <android.support.v7.widget.AppCompatAutoCompleteTextView
                    android:id="@+id/customer_id"



                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/customer_id_text_layout"
                    android:inputType="textPhonetic"
                    android:layout_marginTop="30dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/textboxback"
                    android:hint="Customer ID"
                    android:text=""
                    android:textColorHint="#fff"
                    android:textColor="#ffffff"
                    />

                <Button
                    android:id="@+id/bill_payment"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:background="@drawable/buttonunpressedback"
                    android:text="Bill Payment"
                    android:textColor="#ffffff"
                    android:layout_margin="20dp"
                    android:layout_gravity="bottom"

                    android:textSize="20sp" />


            </LinearLayout>




        </RelativeLayout>


</FrameLayout>
